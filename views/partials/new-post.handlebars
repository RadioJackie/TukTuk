<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="newPostForm" action="/api/add" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="imageUpload">Add Image</label>
                    <input type="file" class="form-control-file" id="imageUpload">
                </div>
                <div class="form-group">
                    <label for="countryName">Country Name</label>
                    <input type="text" class="form-control" id="countryName"
                        placeholder="United States">
                </div>
                <textarea name="text" id="myEditor"></textarea>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Understood</button>
        </div>
    </div>
</div>